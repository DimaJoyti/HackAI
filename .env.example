# HackAI Platform Environment Configuration
# ==========================================

# Application Environment
NODE_ENV=development
APP_ENV=development
LOG_LEVEL=info
DEBUG=false

# Server Configuration
API_URL=http://localhost:8080
WS_URL=ws://localhost:8080
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hackai
DB_USER=hackai
DB_PASSWORD=hackai_password
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=100
DB_IDLE_TIMEOUT=300s
DATABASE_URL=postgres://hackai:hackai_password@localhost:5432/hackai?sslmode=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50
REDIS_URL=redis://:redis_password@localhost:6379/0

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h
BCRYPT_COST=12
SESSION_TIMEOUT=3600
MFA_ISSUER=HackAI
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# AI Service Configuration
AI_MODEL_ENDPOINT=https://api.openai.com/v1
AI_API_KEY=your-openai-api-key-here
AI_MODEL_NAME=gpt-4
AI_MODEL_TEMPERATURE=0.7
AI_MAX_TOKENS=4000
AI_TIMEOUT=30s

# Alternative AI Providers
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Security Service Configuration
THREAT_INTEL_API_KEY=your-threat-intelligence-api-key
SCAN_TIMEOUT=300s
MAX_CONCURRENT_SCANS=10
VULNERABILITY_DB_URL=https://vulndb.cyberriskanalytics.com
MITRE_ATLAS_API_URL=https://attack.mitre.org/api

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@hackai.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=HackAI Platform <noreply@hackai.com>
SMTP_TLS=true

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage
AWS_REGION=us-west-2
AWS_S3_BUCKET=hackai-storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Google Cloud Storage
GCS_BUCKET=hackai-storage
GCS_PROJECT_ID=your-gcp-project-id
GCS_KEY_FILE=path/to/service-account.json

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=hackaistorage
AZURE_STORAGE_KEY=your-azure-storage-key
AZURE_CONTAINER=hackai-files

# Monitoring & Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_URL=http://localhost:3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=hackai
OTEL_SERVICE_VERSION=1.0.0
OTEL_RESOURCE_ATTRIBUTES=service.name=hackai,service.version=1.0.0

# Logging Configuration
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100MB
LOG_MAX_BACKUPS=5
LOG_MAX_AGE=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s
RATE_LIMIT_BURST=10

# Content Security
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,jpg,jpeg,png,gif
CONTENT_SCAN_ENABLED=true

# Learning Management
DEFAULT_MODULE_TIMEOUT=3600s
ASSESSMENT_TIME_LIMIT=1800s
MAX_ATTEMPTS_PER_ASSESSMENT=3
CERTIFICATE_VALIDITY_DAYS=365

# Compliance & Audit
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90
COMPLIANCE_MODE=strict
DATA_RETENTION_DAYS=2555

# External API Keys
VIRUSTOTAL_API_KEY=your-virustotal-api-key
SHODAN_API_KEY=your-shodan-api-key
CENSYS_API_ID=your-censys-api-id
CENSYS_API_SECRET=your-censys-api-secret

# Social Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-api-key

# Feature Flags
FEATURE_AI_SECURITY_SCANNER=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_COLLABORATION=false
FEATURE_MOBILE_APP=false
FEATURE_API_V2=false

# Development Tools
HOT_RELOAD=true
WEBPACK_DEV_SERVER=true
REACT_REFRESH=true
SOURCE_MAPS=true

# Testing Configuration
TEST_DATABASE_URL=postgres://hackai:hackai_password@localhost:5432/hackai_test?sslmode=disable
TEST_REDIS_URL=redis://:redis_password@localhost:6379/1
INTEGRATION_TEST_TIMEOUT=300s
E2E_TEST_TIMEOUT=600s

# Docker Configuration
DOCKER_REGISTRY=ghcr.io/dimajoyti
DOCKER_TAG=latest
DOCKER_BUILDKIT=1

# Kubernetes Configuration
KUBE_NAMESPACE=hackai
KUBE_CONTEXT=default
HELM_CHART_VERSION=1.0.0

# CI/CD Configuration
CI_ENVIRONMENT=false
BUILD_NUMBER=local
DEPLOYMENT_ENVIRONMENT=development
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Performance Tuning
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=30s
KEEP_ALIVE_TIMEOUT=65s
GRACEFUL_SHUTDOWN_TIMEOUT=30s

# Security Headers
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'
REFERRER_POLICY=strict-origin-when-cross-origin

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=local
BACKUP_STORAGE_PATH=./backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=HackAI is currently under maintenance. Please check back later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh
TIMEZONE=UTC

# Custom Application Settings
ORGANIZATION_NAME=HackAI
SUPPORT_EMAIL=support@hackai.com
TERMS_URL=https://hackai.com/terms
PRIVACY_URL=https://hackai.com/privacy
DOCUMENTATION_URL=https://docs.hackai.com

# Development Overrides (only used in development)
DEV_SKIP_AUTH=false
DEV_MOCK_AI_RESPONSES=false
DEV_DISABLE_RATE_LIMITING=false
DEV_ENABLE_DEBUG_ROUTES=true
