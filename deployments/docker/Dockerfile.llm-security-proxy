# Build stage
FROM golang:1.21-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git ca-certificates tzdata

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the LLM Security Proxy
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o llm-security-proxy ./cmd/llm-security-proxy

# Final stage
FROM alpine:latest

# Install runtime dependencies
RUN apk --no-cache add ca-certificates curl

# Create non-root user
RUN addgroup -g 1001 -S hackai && \
    adduser -u 1001 -S hackai -G hackai

# Set working directory
WORKDIR /app

# Copy binary from builder stage
COPY --from=builder /app/llm-security-proxy .

# Copy configuration files if they exist
COPY --from=builder /app/configs ./configs

# Change ownership to non-root user
RUN chown -R hackai:hackai /app

# Switch to non-root user
USER hackai

# Expose port
EXPOSE 9087

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:9087/health || exit 1

# Run the LLM Security Proxy
CMD ["./llm-security-proxy"]
